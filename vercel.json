{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/public/$1",
            "continue": true
        },
        {
            "src": "/generate-pdf",
            "methods": ["POST"],
            "dest": "/server.js"
        }
    ],
    "public": true
}
